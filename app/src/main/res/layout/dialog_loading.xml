<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/px_252"
        android:layout_height="@dimen/px_252"
        android:background="@mipmap/ic_loading_back">


        <ImageView
            android:id="@+id/loading_image_animation"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_144"
            android:background="@drawable/dialog_loading_animation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_image_animation"
            android:layout_centerHorizontal="true"
            android:text="正在加载"
            android:textColor="@color/white"
            android:textSize="@dimen/px_32" />


    </RelativeLayout>


</LinearLayout>